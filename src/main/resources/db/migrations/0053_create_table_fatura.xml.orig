<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <property name="LONG.VARCHAR" value="LONG VARCHAR" dbms="mysql" />
    <property name="LONG.VARCHAR" value="LONGVARCHAR" dbms="hsqldb" />
    <property name="LONG.VARCHAR" value="LONG VARCHAR" dbms="derby" />
    <property name="TIMESTAMP" value="TIMESTAMP" dbms="derby" />
    <property name="TIMESTAMP" value="TIMESTAMP(3)" dbms="mysql" />
    <property name="CURRENT_TIMESTAMP" value="CURRENT_TIMESTAMP" dbms="derby" />
    <property name="CURRENT_TIMESTAMP" value="NOW()" dbms="mysql" />


    <changeSet author="laas" id="53">
        <createTable  tableName="FATURA">
            <column autoIncrement="true" name="ID_FATURA" type="BIGINT"><constraints nullable="false" primaryKey="true"/></column>
            <column name="TX_DESCRICAO" type="VARCHAR(100)"><constraints nullable="false"/></column>
            <column name="ID_PESSOA" type="BIGINT"><constraints nullable="false"/></column>
            <column name="TS_DATA_CADASTRO" type="${TIMESTAMP}" defaultValueComputed="${CURRENT_TIMESTAMP}"><constraints nullable="false"/></column>
            <column name="TX_UUID" type="VARCHAR(100)"><constraints nullable="false"/></column>
        </createTable>

        <addForeignKeyConstraint baseTableName="FATURA" baseColumnNames="ID_PESSOA" constraintName="FK_FATURA_PESSOA" referencedTableName="PESSOA"
                                 referencedColumnNames="ID_PESSOA" />

        <addForeignKeyConstraint baseTableName="EVENTO" baseColumnNames="ID_FATURA" constraintName="FK_EVENTO_FATURA" referencedTableName="FATURA"
                                 referencedColumnNames="ID_FATURA" />

        <createIndex indexName="INDEX_FATURA_UUID" tableName="FATURA" unique="true">
            <column name="TX_UUID" type="VARCHAR(100)" />
        </createIndex>
    </changeSet>
</databaseChangeLog>

