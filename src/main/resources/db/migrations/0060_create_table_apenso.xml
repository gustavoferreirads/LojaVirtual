<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <property name="LONG.VARCHAR" value="LONG VARCHAR" dbms="mysql" />
    <property name="LONG.VARCHAR" value="LONGVARCHAR" dbms="hsqldb" />
    <property name="LONG.VARCHAR" value="LONG VARCHAR" dbms="derby" />
    <property name="TIMESTAMP" value="TIMESTAMP" dbms="derby" />
    <property name="TIMESTAMP" value="TIMESTAMP(3)" dbms="mysql" />
    <property name="CURRENT_TIMESTAMP" value="CURRENT_TIMESTAMP" dbms="derby" />
    <property name="CURRENT_TIMESTAMP" value="NOW(3)" dbms="mysql" />


    <changeSet author="laas" id="60">

        <createTable tableName="APENSO">
            <column name="ID_APENSO" type="BIGINT" autoIncrement="true" >
                <constraints primaryKey="true" />
            </column>
            <column name="ID_PROCESSO_PAI" type="BIGINT" />
            <column name="ID_PROCESSO_APENSADO" type="BIGINT" />
            <column name="TX_CAMINHO" type="VARCHAR(1000)" />
            <column name="TS_DATA_CADASTRO" type="${TIMESTAMP}" />
        </createTable>

        <addForeignKeyConstraint baseTableName="APENSO" baseColumnNames="ID_PROCESSO_PAI" constraintName="FK_APENSO_PROCESSO_PAI"
                                 referencedTableName="PROCESSO" referencedColumnNames="ID_PROCESSO" />

        <addForeignKeyConstraint baseTableName="APENSO" baseColumnNames="ID_PROCESSO_APENSADO" constraintName="FK_APENSO_PROCESSO_APENSADO"
                                 referencedTableName="PROCESSO" referencedColumnNames="ID_PROCESSO" />

        <addColumn tableName="PROCESSO">
            <column name="TX_UUID" type="VARCHAR(100)" />
        </addColumn>

    </changeSet>

</databaseChangeLog>

