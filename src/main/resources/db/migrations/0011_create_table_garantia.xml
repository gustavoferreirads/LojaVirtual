<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <property name="LONG.VARCHAR" value="LONG VARCHAR" dbms="mysql" />
    <property name="LONG.VARCHAR" value="LONGVARCHAR" dbms="hsqldb" />
    <property name="LONG.VARCHAR" value="LONG VARCHAR" dbms="derby" />
    <property name="TIMESTAMP" value="TIMESTAMP" dbms="derby" />
    <property name="TIMESTAMP" value="TIMESTAMP(3)" dbms="mysql" />
    <property name="CURRENT_TIMESTAMP" value="CURRENT_TIMESTAMP" dbms="derby" />
    <property name="CURRENT_TIMESTAMP" value="NOW(3)" dbms="mysql" />


    <changeSet author="laas" id="11">
        <createTable  tableName="GARANTIA">
            <column autoIncrement="true" name="ID_GARANTIA" type="BIGINT"><constraints nullable="false" primaryKey="true"/></column>
            <column name="NI_TIPO_GARANTIA" type="SMALLINT">         <constraints nullable="false"/></column>
            <column name="FG_ESPECIE" type="SMALLINT"/>
            <column name="CX_OBJETO_GARANTIA" type="BIGINT"/>
            <column name="TX_DESCRICAO" type="VARCHAR(30)"/>
            <column name="TX_ANOTACOES" type="${LONG.VARCHAR}"/>
            <column name="NF_VALOR_INICIAL" type="NUMERIC(12,2)"/>
            <column name="NF_VALOR_ATUALIZADO" type="NUMERIC(12,2)"/>
            <column name="NF_SALDO" type="NUMERIC(12,2)"/>
            <column name="ID_FASE" type="BIGINT">                    <constraints nullable="false"/></column>
            <column name="ID_PROCESSO" type="BIGINT">                    <constraints nullable="false"/></column>
            <column name="ID_USUARIO" type="BIGINT">                 <constraints nullable="false"/></column>
            <column name="TS_DATA_CADASTRO" type="${TIMESTAMP}">     <constraints nullable="false"/></column>
            <column name="TS_ULT_MODIFICACAO" type="${TIMESTAMP}">   <constraints nullable="false"/></column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="CX_OBJETO_GARANTIA" baseTableName="GARANTIA"  constraintName="CX_OBJETO_GARANTIA_ITEM_DE_VALOR" deferrable="false" initiallyDeferred="false" referencedColumnNames="ID_ITEM_CONJ_VALORES" referencedTableName="ITEM_CONJ_VALORES" />
        <addForeignKeyConstraint baseColumnNames="ID_USUARIO" baseTableName="GARANTIA"  constraintName="ID_USUARIO_GARANTIA" deferrable="false" initiallyDeferred="false" referencedColumnNames="ID_USUARIO_OU_GRUPO" referencedTableName="USUARIO_OU_GRUPO" />
        <addForeignKeyConstraint baseColumnNames="ID_FASE" baseTableName="GARANTIA"  constraintName="ID_FASE_GARANTIA" deferrable="false" initiallyDeferred="false" referencedColumnNames="ID_FASE" referencedTableName="FASE_PROCESSUAL" />
        <addForeignKeyConstraint baseColumnNames="ID_PROCESSO" baseTableName="GARANTIA"  constraintName="ID_PROCESSO_GARANTIA" deferrable="false" initiallyDeferred="false" referencedColumnNames="ID_PROCESSO" referencedTableName="PROCESSO" />

    <!-- ################## CONFIGURAÇÃO ####################### -->

        <!--### Conjunto de Valores #### -->
        <insert tableName="CONJ_VALORES">
            <column name="TX_DESCRICAO_CONJ_VALORES" value="Objeto da Garantia"/>
            <column name="TS_ULT_MODIFICACAO" valueComputed="${CURRENT_TIMESTAMP}"/>
        </insert>


        <!--#### Tipo de Cadastro #####-->

            <insert tableName="TIPO_CADASTRO">    <!-- ID= 23 -->
                <column name="TX_NOME_TIPO_CADASTRO" value="Garantia"/>
                <column name="TX_NOME_CLASSE" value="Garantia"/>
            </insert>

        <!-- #### Funcionalidade ####-->

            <insert tableName="FUNCIONALIDADE">   <!--ID= 18 -->
                <column name="ID_TIPO_CADASTRO" valueNumeric="23"/>
                <column name="TX_FUNCIONALIDADE" value="Cadastro de garantia"/>
                <column name="TX_NOME_CLASSE" value="Garantia"/>
            </insert>

        <!--####### Funcionalidade e Operação ########-->

            <insert tableName="FUNCIONALIDADE_OPERACAO">
                <column name="ID_TIPO_CADASTRO" valueNumeric="23"/>
