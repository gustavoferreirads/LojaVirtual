    <changeSet author="laas" id="27">

        <createTable  tableName="ESTORNO">
            <column autoIncrement="true" name="ID_ESTORNO" type="BIGINT"><constraints nullable="false" primaryKey="true"/></column>
            <column name="ID_MOVIMENTO_FINANCEIRO" type="BIGINT"><constraints nullable="false"/></column>
            <column name="ID_CONTA" type="BIGINT"><constraints nullable="false"/></column>
            <column name="TS_DATA_CADASTRO" type="${TIMESTAMP}"/>
            <column name="ID_CLIENTE_LAAS" type="BIGINT"><constraints nullable="false"/></column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="ID_CONTA" baseTableName="ESTORNO"  constraintName="ID_CONTA_ESTORNO" deferrable="false" initiallyDeferred="false" referencedColumnNames="ID_CONTA" referencedTableName="CONTA" />
        <addForeignKeyConstraint baseColumnNames="ID_MOVIMENTO_FINANCEIRO" baseTableName="ESTORNO"  constraintName="ID_MOVIMENTO_FINANCEIRO_ESTORNO" deferrable="false" initiallyDeferred="false" referencedColumnNames="ID_MOVIMENTO_FINANCEIRO" referencedTableName="MOVIMENTO_FINANCEIRO" />

        <addColumn tableName="MOVIMENTO_FINANCEIRO">
            <column name="ID_ESTORNO" type="BIGINT"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="MOVIMENTO_FINANCEIRO" baseColumnNames="ID_ESTORNO" constraintName="MOVIMENTO_FINANCEIRO_ID_ESTORNO" referencedTableName="ESTORNO"
                                 referencedColumnNames="ID_ESTORNO" />

        <!-- Conta A Pagar-->
